{
  "compilerOptions": {
    "target": "ES2020",                     // Compatible JavaScript version
    "module": "commonjs",                   // Required for Node.js
    "strict": true,                         // Enable strict type-checking options
    "esModuleInterop": true,                // Allows default import of CommonJS modules
    "moduleResolution": "node",             // Resolve Node.js modules
    "skipLibCheck": true,                   // Skip type checking for libraries
    "outDir": "./dist",                     // Output folder for compiled JavaScript
    "rootDir": "./src",                     // Root folder for TypeScript files
    "resolveJsonModule": true,              // Allows importing JSON files
    "sourceMap": true,                      // Enable source maps for debugging
    "removeComments": true,                 // Remove comments from compiled JavaScript
    "baseUrl": ".",                         // Base directory for module resolution
    "paths": {
      "*": ["node_modules/*"]
    },
    "experimentalDecorators": true,         // Enable decorator support (if needed, e.g. TypeORM)
    "emitDecoratorMetadata": true  ,
    "strictPropertyInitialization": false,         // Emit metadata for decorators
  },
  "include": ["src/**/*.ts"],               // Include all TypeScript files in src folder
  "exclude": ["node_modules", "dist"]       // Exclude these directories
}
